# TrendRadar AI Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# Crawler Settings
# ============================================
ENABLE_CRAWLER=true
REPORT_MODE=daily  # daily, current, incremental

# ============================================
# Push Window Settings
# ============================================
PUSH_WINDOW_ENABLED=false
PUSH_WINDOW_START=09:00
PUSH_WINDOW_END=18:00

# ============================================
# Notification Webhooks
# Fill in the ones you want to use
# ============================================

# WeChat Work Bot
WEWORK_WEBHOOK_URL=
WEWORK_MSG_TYPE=markdown  # markdown or text

# Feishu (Lark) Bot
FEISHU_WEBHOOK_URL=

# DingTalk Bot
DINGTALK_WEBHOOK_URL=

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Slack
SLACK_WEBHOOK_URL=

# ntfy (open-source notifications)
NTFY_TOPIC=
NTFY_TOKEN=  # Optional, for private topics

# Bark (iOS)
BARK_URL=

# Email
EMAIL_FROM=
EMAIL_PASSWORD=  # Use app password for Gmail
EMAIL_TO=  # Multiple recipients separated by comma

# ============================================
# AI Settings (for CrewAI)
# ============================================

# OpenAI (default)
OPENAI_API_KEY=

# Anthropic (optional)
ANTHROPIC_API_KEY=
